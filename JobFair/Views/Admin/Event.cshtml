
@{
    ViewBag.Title = "Danh sách sự kiện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section scripts {
    <script src="~/Assets/js/page/event.js"></script>
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2">
</div>
<div class="row border-bottom mb-3">
    <div class="col-8">
        <h2 class="h2">@ViewBag.Title</h2>
    </div>
    <div class="col-4 text-right">
        <a role="button" class="btn btn-primary" href="@Url.Action("NewEvent", "Admin")"><i class="fa-solid fa-plus"></i> Tạo mới</a>
    </div>
</div>

<div id="loading" class="text-center" style="padding-top: 60px">
    <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div id="result" style="padding-top: 20px; display: none">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Tên sự kiện/hội thảo</th>
                <th scope="col">Ngày</th>
                <th scope="col">Phòng</th>
                <th scope="col">Hiển thị</th>
                <th scope="col">Tổng đăng ký</th>
                <th scope="col" class="text-right">Action</th>
            </tr>
        </thead>
        <tbody id="dataTable">
        </tbody>
    </table>
</div>
