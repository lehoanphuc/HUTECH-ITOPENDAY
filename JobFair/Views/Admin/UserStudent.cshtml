
@{
    ViewBag.Title = "Danh sách tài khoản ứng viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts {
    <script src="~/Assets/js/page/userstudent.js"></script>
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2">
</div>
<div class="row border-bottom mb-3">
    <div class="col-12">
        <h2 class="h2">@ViewBag.Title</h2>
    </div>
</div>

<div id="loading" class="text-center" style="padding-top: 60px">
    <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div id="result" style="padding-top: 20px; display: none">
    <h6>Danh sách này có tổng cộng <b id="count"></b> ứng viên</h6>
    <br />
    <div id="dataPage">
        <nav aria-label="Page navigation" style="">
            <ul class="pagination justify-content-end" id="listPage">
            </ul>
        </nav>
    </div>

    <table class="table" id="exportTable">
        <thead class="thead-light">
            <tr>
                <th scope="col">Tài khoản</th>
                <th scope="col">Họ tên</th>
                <th scope="col">Lớp</th>
                <th scope="col">Email</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col" class="text-right">Action</th>
            </tr>
        </thead>
        <tbody id="dataTable">
        </tbody>
    </table>
</div>