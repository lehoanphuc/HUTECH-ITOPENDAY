@{
    var listVideo = JobFair.Shared.MasterData.VideoData.GetVideo();
}


<section class="testimonials text-center bg-light" id="video">
    <div class="container">
        <h1>VIDEO NGÀY HỘI</h1>
        <div class="container text-center my-3">
            <div class="row mx-auto my-auto">
                <div class="row">
                    @foreach (var video in listVideo)
                    {
                        <div class="col-sm-4">
                            <iframe width="100%" height="250" src="@video.Link" title="@video.Name" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    }
                </div>
            </div>

        </div>




    </div>
</section>
